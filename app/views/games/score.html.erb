<div class="container">
  <div class="letters">
    <% @letters.chars.each do |letter| %>
      <span> <%= letter %> </span>
    <% end %>
  </div>
</div>

<div class="container">
  <h3> Your answer: <%= @guess %> </h3>
  <h3> Your answer is <%= @valid %> </h3>
</div>

<div class="container">
  <a href="/new" class="btn btn-primary">Play again!</a>
</div>
