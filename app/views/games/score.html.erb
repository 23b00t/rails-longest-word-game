<div class="container">
  <div class="letters">
    <% @letters.chars.each do |letter| %>
      <span> <%= letter %> </span>
    <% end %>
  </div>
</div>

<div class="container">
  <h3> Your answer: <%= @guess %> </h3>
</div>

<div class="container" style="margin-top: 16px">
  <h2> <%= @result %> </h2>
</div>

<div class="container" style="margin-top: 16px">
  <%= link_to "Play again", new_path, class: "btn btn-primary"%>
</div>
