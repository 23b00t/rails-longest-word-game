<div class="container">
  <div class="letters">
    <% @letters.delete(' ').chars.each do |letter| %>
      <span> <%= letter %> </span>
    <% end %>
  </div>
</div>

<div class="container">
  <h3> Your answer: <%= @guess %> </h3>
  <h3> Your answer is <%= @valid %> </h3>
</div>

<div class="container">
  <%= link_to "Play again", new_path, class: "btn btn-primary"%>
</div>
